export function manageTrafic(color) {
  return {
    type: "SELECTED_COLOR",
    payload:color
  }



};

timer =(color)=>
	{
		if(color == 'red'){
			color = 'green'; 
		}else{
			color = 'red';
		}
		setTimeout(()=>{console.log('term color - '+this.color);this.timer(this.color)}, 5000);
		return color;
	}
